{
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true,
    "jest": true
  },
  "extends": ["eslint:recommended", "prettier"],
  "parser": "babel-eslint",
  "plugins": ["jest", "prettier"],
  "rules": {
    "linebreak-style": ["error", "unix"],
    "valid-jsdoc": [
      "error",
      {
        "requireReturn": false,
        "requireReturnDescription": false,
        "requireParamDescription": false
      }
    ]
  }
}
